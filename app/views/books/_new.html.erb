<div>
  <%= flash[:notice] %>
</div>


<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 py-3 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag (@user || current_user).get_profile_image(100, 100), size: "100x100" %>
      
      <table class="table">
        <tbody>
         <tr>  
            <th>name</th>
            <th><%= (@user || current_user).name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= (@user || current_user).introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user || current_user), class: "btn btn-secondary btn-lg btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new, url: books_path, local: true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= yield :right_column %>
    </div>
  </div>
</div>