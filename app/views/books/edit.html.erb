<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

div class="container" style="max-width: 600px;">
  <div class="mx-auto">
    <h1>Editing Book</h1>
    <%= form_with model: @book, local: true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>

      <p>Opinion</p>
      <%= f.text_area :body %><br>

      <%= f.submit 'Update Book' %>

      <p><%= link_to "Show", book_path(@book) %>|
      <a href="/books">Back</a></p>

    <% end %>
  </div>
</div>
