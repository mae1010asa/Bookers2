<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/015e7b3d71.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to root_path, class: "navbar-brand" do %>
          Bookers
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user), class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i>
                  Home
                <% end %>
              </li>

              <li class="nav-item">
              <a class="nav-link text-light" href="/users"><i class="fa-solid fa-users"></i>
              Users</a>
              </li>
              <li class="nav-item">
              <a class="nav-link text-light" href="/books"><i class="fa-solid fa-book-open"></i>
              Books</a>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                <i class="fa-solid fa-right-from-bracket"></i>
                  Log out
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-light" do %><i class="fa-solid fa-house"></i>
                Home
                <% end %>
              </li>
              
              <li class="nav-item">
              <a class="nav-link text-light" href="/home/about"><i class="fa-solid fa-link"></i>
              About</a>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i>
                  Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i>
                  Log in
                <% end %>
              </li>
            <% end %>
          </ul>          
        </div>
      </div>
    </nav>

     <% flash.each do |key, value| %>
        <div class="alert alert-<%= key == "notice" ? "success" : "danger" %>">
          <%= value %>
        </div>
      <% end %>

    

    <%= yield %>
  </body>
  <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <P>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
  </footer>
</html>
