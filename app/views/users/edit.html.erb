<div>
  <%= flash[:notice] %>
</div>

<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div ="row">
    <div class="col-8 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user, local: true do |f| %>
        <label for="inputname">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
        <label for="inputImage">ProfileImage</label><br>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %> <br>
        <label for="inputname">Introduction</label><br>
        <%= f.text_area :introduction %><br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>

